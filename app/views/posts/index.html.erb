<p id="notice"><%= notice %></p>

<div class="d-flex flex-row justify-content-around">
  <div>
    <p class="font5">실시간 조회수 TOP</P>
    <% @viewposts.each do |viewpost| %>
      <p class="font4" style="text-align: center"><%= link_to viewpost.title, viewpost %></p>
    <% end %>
  </div>
  <div>
    <p class="font5">실시간 추천수 TOP</P>
    <% @likeposts.each do |likepost| %>
      <p class="font4" style="text-align: center"><%= link_to likepost.title, likepost %></p>
    <% end %>
  </div>
</div>


<table class="table table-borderless container">
  <thead>
    <tr>
      <th>팀</th>
      <th>likes</th>
      <th>views</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="font2"><%= link_to post.title, post, :class => "font1" %> <br> <%= post.summary %> </td>
        <td colspan="1" width="5%" align="left" style="border-bottom: 1px dashed gray;" class="font3"><%= post.likes  %></td>
        <td colspan="1" width="5%" align="left" style="border-bottom: 1px dashed gray;" class="font3"> <%= "#{post.unique_impression_count}" %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="searchbar">
  <%= form_tag search_path, method: :get do %>
    <%= select_tag("search[select]", options_for_select([["제목","title"],["내용","content"]] )) %>
    <%= text_field_tag "search[query]" %>
    <%= submit_tag("Search") %>
  <% end %>
</div>

<div class="searchbar2">
  <%= link_to 'New Post', new_post_path %>
</div>
