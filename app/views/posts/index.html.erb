<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<div class="container">
  <h2>현재 추천 1등</h2>
  <h2>현재 조회수 1등</h2>
</div>

<table class="table table-borderless container">
  <thead>
    <tr>
      <th>팀</th>
      <th>views</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="font2"><%= link_to post.title, post, :class => "font1" %> <br> <%= post.summary %> </td>
        <td colspan="1" width="5%" align="left" style="border-bottom: 1px dashed gray;"> <%= "#{post.unique_impression_count} views" %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
