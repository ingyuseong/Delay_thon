<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<%= form_tag search_path, method: :get do %>
  <%= select_tag("search[select]", options_for_select([["제목","title"],["내용","content"]] )) %>
  <%= text_field_tag "search[query]" %>
  <%= submit_tag("Search") %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
      <th>likes</th>
      <th>views</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.summary %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= post.likes %></td>
        <td><%= post.views %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
