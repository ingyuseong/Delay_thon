<p id="notice"><%= notice %></p>

<h1>Posts</h1>



<table class="table table-borderless container">
  <thead>
    <tr>
      <th>팀</th>
      <th>likes</th>
      <th>views</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="font2"><%= link_to post.title, post, :class => "font1" %> <br> <%= post.summary %> </td>
        <td colspan="1" width="5%" align="left" style="border-bottom: 1px dashed gray;" class="font3"><%= post.likes  %></td>
        <td colspan="1" width="5%" align="left" style="border-bottom: 1px dashed gray;" class="font3"> <%= "#{post.unique_impression_count}" %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="searchbar">
  <%= form_tag search_path, method: :get do %>
    <%= select_tag("search[select]", options_for_select([["제목","title"],["내용","content"]] )) %>
    <%= text_field_tag "search[query]" %>
    <%= submit_tag("Search") %>
  <% end %>
</div>
<%= link_to 'New Post', new_post_path %>
