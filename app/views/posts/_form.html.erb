<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group row">
    <%= form.label :"서비스 이름", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :title, class:"form-control" %>
    </div>
  </div>

  <div class="field form-group row">
    <%= form.label :"서비스 간단요약", class:"col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :summary, class:"form-control" %>
    </div>
  </div> 

  <div class="field">
    <%= tinymce :language => "en" %>
    <%= form.text_area :content, id: :post_content, class: "form-control tinymce", rows: "10" %>
</div>

  <div class="field form-group row" style="margin-top: 20px">
    <div class="col-sm-2 col-form-label">개발상태</div>
    <div class-"col-sm-10">
      <%= form.radio_button :status,'1', :checked => true %> 
      <%= label :status_1, '코딩다함 보러오셈 히히', style:"margin-right: 40px" %>
      <%= form.radio_button :status, '2' %>
      <%= label :status_2, '아직 코딩중.. ㅠ', style:"margin-right: 40px" %>
      <%= form.radio_button :status, '3' %>
      <%= label :status_3, '걍 포기함 다 망함' %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-2 col-sm-4">팀 테이블 위치</div>
    <div class="field col-lg-2 col-sm-4">
      <%= form.label :"왼쪽부터" %>
      <%= form.select :column,  options_for_select([[1,0],[2,1],[3,2],[4,3],[5,4],[6,5],[7,6]], :column) %>
      번째
    </div>

    <div class="field col-lg-2 col-sm-4">
      <%= form.label :"앞에서부터" %>
      <%= form.select :row, options_for_select((1..5).step(1), :row) %>
      번째
    </div>
    <div class="col-lg-1"></div>
    <div class="field form-group col-lg-5 row">
      <%= form.label :password, class:"col-lg-2 col-sm-2 col-form-label" %>
      <div class="col-lg-10 col-sm-10">
      <%= form.password_field :password, class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-lg btn-primary float-right", style:"margin-top: 20px" %>
  </div>
<% end %>