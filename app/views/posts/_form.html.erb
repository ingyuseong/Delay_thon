<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= tinymce :language => "en" %>
    <%= form.text_area :content, id: :post_content, class: "form-control tinymce", rows: "10" %>
</div>


  <div class="field" style="display: inline">
    <%= form.label :row, style:"display: inline" %>
    <%= form.select :row, options_for_select((1..7).step(1)) %>
  </div>

  <div class="field" style="display: inline">
    <%= form.label :column, style: "display: inline" %>
    <%= form.select :column, options_for_select([[1,0],[2,1],[3,2],[4,3],[5,4]]) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
